$box-shadow = 0 0 4px rgba(0,0,0,0.3) inset,0 -3px 2px rgba(0,0,0,0.1)
$dark-texture = url('../img/messages.png') bottom left repeat-x
$blue-texture = url('../img/messages.png') top left repeat-x

body 
  background url('../img/main.jpg')
  color #fff
  font-size 11px
  line-height 15px
  font-family helvetica, arial, sans-serif

a, avisited 
  text-decoration none
  color #54a6de

.new a, .new avisited 
  color #222

a:hover
  color #86caf9

#wrapper 
  margin 50px auto
  width 400px

#message 
  display none
  font-size 20px
  line-height 30px
  width 400px
  margin 0 auto

#message p 
  margin-bottom 30px

#message #secret 
  margin-bottom 0px

#dropbox 
  background $dark-texture
  border-radius 3px
  display none
  width 400px
  height 200px
  line-height 200px
  text-align center
  box-shadow $box-shadow
  font-weight bold
  text-transform uppercase

#dropbox.dragenter 
  background $blue-texture

#files
  display none
  width 400px
  overflow auto

#files li 
  background $dark-texture
  float left
  border-radius 3px
  width 380px
  margin-top 15px
  position relative
  padding 10px
  font-weight bold
  box-shadow $box-shadow

#files li a.delete 
  position absolute
  line-height 20px
  font-size 20px
  color #b04435
  top 50%
  right 5px
  margin-top -10px
  
#files li a.delete:hover
  color #f65e4a

#files .new 
  background $blue-texture